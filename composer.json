{
    "name": "qcmnagai/hello",
    "description": "",
    "keywords": [
        "Skeleton",
        "PSR"
    ],
    "homepage": "https://github.com/qcmnagai/hello",
    "license": "MIT",
    "authors": [
        {
            "name": "qcmnagai"
        }
    ],
    "require": {
        "php": ">=7.0",
        "symfony/console": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "squizlabs/php_codesniffer": "^2.8",
        "friendsofphp/php-cs-fixer": "^2.3",
        "phpmd/phpmd": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Qcmnagai\\Hello\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qcmnagai\\Hello\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf ./bin",
            "mkdir -p ./bin",
            "curl -LSs https://box-project.github.io/box2/installer.php | php && mv ./box.phar ./bin",
            "wget https://github.com/tcnksm/ghr/releases/download/v0.5.4/ghr_v0.5.4_linux_amd64.zip -O ./ghr_linux_amd64.zip && unzip ./ghr_linux_amd64.zip -d ./bin && rm ./ghr_linux_amd64.zip"
        ],
        "post-update-cmd": [
            "rm -rf ./bin",
            "mkdir -p ./bin",
            "curl -LSs https://box-project.github.io/box2/installer.php | php && mv ./box.phar ./bin",
            "wget https://github.com/tcnksm/ghr/releases/download/v0.5.4/ghr_v0.5.4_linux_amd64.zip -O ./ghr_linux_amd64.zip && unzip ./ghr_linux_amd64.zip -d ./bin && rm ./ghr_linux_amd64.zip"
        ],
        "test": [
            "phpmd src text ./phpmd.xml",
            "@cs",
            "phpunit"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run",
            "phpcs --standard=./phpcs.xml src"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src"
        ],
        "build": [
            "rm -rf ./dist",
            "mkdir -p ./dist",
            "php -d phar.readonly=0 ./bin/box.phar build"
        ],
        "release": [
            "@build",
            "./bin/ghr -u qcmnagai v$(./dist/hello.phar --version | cut -d \" \" -f 2) ./dist"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
